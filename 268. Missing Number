class Solution {
public:
    int missingNumber(vector<int>& nums) {
        sort(nums.begin(),nums.end());
        int t=0;
        int n=nums.size();
        int c=0;
        int m=0;
        for(int i=1;i<n;i++){
            if(nums[i-1]+1!=nums[i]){
                t=1;
                m=nums[i]-1;
                break;
            }
            c++;

        }
        if(t==0){
            if(nums[0]!=0){
                return 0;
            }
            return nums[n-1]+1;
        }
        return m;
    }
};
