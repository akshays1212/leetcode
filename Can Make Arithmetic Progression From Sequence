class Solution {
public:
    bool canMakeArithmeticProgression(vector<int>& arr) {
        sort(arr.begin(),arr.end());
        int sum=arr[1]-arr[0];
        for(int i=1;i<arr.size();i++){
            if(sum!=arr[i]-arr[i-1]){
                return false;
            }
        }
        return true;
    }
};
