class Solution {
public:
    int minimumArea(vector<vector<int>>& grid) {
        int m = grid.size(), n = grid[0].size();
        int top = m, bottom = -1, left = n, right = -1;

        for (int r = 0; r < m; ++r) {
            for (int c = 0; c < n; ++c) {
                if (grid[r][c] == 1) {
                    top = min(top, r);
                    bottom = max(bottom, r);
                    left = min(left, c);
                    right = max(right, c);
                }
            }
        }

        if (bottom == -1) return 0;
        return (bottom - top + 1) * (right - left + 1);
    }
};
